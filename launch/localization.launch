<launch>
	<arg name="map_file" default="$(find chibi19_a)/map_data/a19map2.yaml"/>
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

	<node pkg="rviz" type="rviz" name="rviz" args="-d $(find chibi19_a)/config/localization.rviz"/>

	<node pkg="chibi19_a" type="localization" name="localization" output="screen" >
		<param name="N" value="400"/>
		<param name="alpha1" value="0.2"/>
		<param name="alpha2" value="0.2"/>
		<param name="alpha3" value="0.6"/>
		<param name="alpha4" value="0.2"/>
		<param name="z_hit" value="0.7"/>
		<param name="z_rand" value="0.3"/>
		<param name="sigma_hit" value="0.3"/>
		<param name="laser_likelihood_max_dist" value="2.0"/>
		<param name="alpha_slow" value="0.0015"/>
		<param name="alpha_fast" value="0.1"/>
		<param name="max_beam" value="90"/>
		<param name="MAX_RANGE" value="25"/>
		<param name="MIN_RANGE" value="0.02"/>
		<param name="init_x" value="-1.0"/>
		<param name="init_y" value="-3.2"/>
		<param name="init_theta" value="0.0"/>
		<param name="init_x_cov" value="0.3"/>
		<param name="init_y_cov" value="0.3"/>
		<param name="init_theta_cov" value="0.2"/>
		<param name="x_cov_thresh" value="0.10"/>
		<param name="y_cov_thresh" value="0.10"/>
		<param name="motion_update" value="0.1"/>
		<param name="angle_update" value="0.1"/>
		<param name="use_init_pose" value="false"/>
	</node>
</launch>
